html
	overflow-x hidden

body
	font-family 'Open Sans',"Lucida Sans Unicode","Lucida Grande",sans-serif;
	// padding-bottom 40px
	background-color white
	color dark
	overflow-x hidden
	font-weight 200

	.row-title-panel
		text-align center
		.row-title
			font-size 20px
			background dark
			box-shadow 1px 2px 4px rgba(0,0,0,0.5)
			color white
			font-style italic
			padding 2px 15px
	.row-panel
		margin-top 10px
		.rack
			font-size 14px
			padding 0
			.rack-title
				color #aaa
				font-size 14px
				text-align center
			.row 
				margin 0
				ul
					list-style-type none
					padding 10px
					.node
						width 100%
						color #888
						padding 5px
						margin-bottom 10px
						opacity 0.7
						-webkit-transition all 0.4s 
						-moz-transition all 0.4s 
						-o-transition all 0.4s 
						transition all 0.4s 
						// background #f5f5f5
						box-shadow 1px 1px 1px rgba(0,0,0,0.2)
						&:hover
							color #555
							opacity 1
							box-shadow 1px 2px 4px rgba(0,0,0,0.5)
						.node-info
							margin-top 25px
						a 
							cursor pointer
							color txt-blue
						.node-ip
							text-align left
							padding 2px 8px
							font-style italic
							box-shadow 1px 1px 1px rgba(0,0,0,0.2)
							margin -8px 8px 8px -8px
							white-space nowrap
							.owner-info
								.fa
									font-size 0.7em
									margin-left 5px
									margin-right 5px
									opacity 0.7
								.popover-content
									color dark
					.node.free 
						// background green
						.node-ip
							background green
							color #fff
						.node-status
							color txt-blue
							text-shadow 1px 1px 1px rgba(0,0,0,0.1)
					.node.busy
						// background pink
						.node-ip
							background pink
							color #fff
					.node.mine 
						.node-ip
							background yellow
							color #fff
					.node.dead
						// background dark-light
						.node-ip
							background dark-grey
							color #eee
				
	.labMapPanelEven
		background #efefef 
		.node 
			background #fefefe
			&:hover
				background #fff
	.labMapPanelOdd
		background #fff
		.node 
			background #efefef
			&:hover 
				background #f5f5f5


	.ng-view-class
		position relative
		.patchingPanel
			width 100%
			height 173px
			background-color green2
		.authenticatePanel
			position relative
			margin-top -173px
			width 100%
			height 100%
			background green2
			z-index 100
			color white

			.loginPanel
				margin-left auto
				margin-right auto
				width 400px
				padding 10px
				.banner
					text-align center
					font-weight 100
					opacity 0.6
					padding-top 200px
					.backHome
						color white
						opacity 0.6
						&:hover
							opacity 1
				.alertMsg
					color orange-light
					text-align center
					font-weight 500
					text-shadow 1px 1px 1px rgba(0,0,0,0.1)
				table
					td 
						text-align center
						input 
							width 100%
							border-radius 3px
							padding 5px
							opacity 0.7
							&:focus
								outline none
								opacity 1
						.btn 
							text-align center
							background white
							color green2 
							border-radius 3px
							padding 8px 20px
							opacity 0.8
							&:hover
								opacity 1

						a 
							color white
							&:hover
								font-weight 600
								text-shadow 1px 2px 3px rgba(0,0,0,0.3)

			.signupPanel
				margin-left auto
				margin-right auto
				width 400px
				padding 10px
				.banner
					text-align center
					font-weight 100
					opacity 0.6
					padding-top 130px
					.backHome
						color white
						opacity 0.6
						&:hover
							opacity 1
				.alertMsg
					color orange-light
					text-align center
					font-weight 500
					text-shadow 1px 1px 1px rgba(0,0,0,0.1)
				table
					td 
						text-align center
						input 
							width 100%
							border-radius 3px
							padding 5px
							opacity 0.7
							&:focus
								outline none
								opacity 1
						.btn 
							text-align center
							background white
							color green2 
							border-radius 3px
							padding 8px 20px
							opacity 0.8
							&:hover
								opacity 1

						a 
							color white
							&:hover
								font-weight 600
								text-shadow 1px 2px 3px rgba(0,0,0,0.3)
		.nodeList
			background-color #fff
			padding 5px 30px
